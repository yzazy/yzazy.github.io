{% if (post.thumb) %}{% assign on=post.thumb|slice:0,4 %}{% if on=="http" or on=="\\" %}<img src="{{post.thumb}}" alt="{{post.title}}" class="img-thumbnail img-fluid"/>{% else %}<img src="{{site.url}}{{site.asseturl}}/{{post.thumb}}" alt="{{post.title}}" class="img-thumbnail img-fluid"/>{% endif %}{% else %}{% assign foundImage=0 %}{% assign images=post.content|split:"<img " %}{% for image in images %}{% if image contains 'src' %}{% if foundImage==0 %}{% assign html=image|split:"/>"|first %}<img {{html}} alt="{{post.title}}" class="img-thumbnail img-fluid"/>{% assign foundImage=1 %}{% endif %}{% endif %}{% endfor %}{% endif %}

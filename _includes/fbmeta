<meta property="og:type" content="article"/><meta property="og:url" content="{{site.url}}{{site.baseurl}}{{page.url}}"/><meta property="og:title" content="{{page.title}}"/>{% if (page.thumb) %}{% assign x=page.thumb|slice:0,4 %}{% if x=="http" %}<meta property="og:image" content="{{page.thumb}}"/>{% else %}<meta property="og:image" content="{{site.url}}{{site.asseturl}}/{{page.thumb}}"/>{% endif %}{% else %}{% assign foundImage=0 %}{% assign images=page.content | split:"<img " %}{% for image in images %}{% if image contains 'src' %}{% if foundImage==0 %}{% assign html=image | split:'g"' | first %}<meta property="og:image" content="{{html|remove:'src="'}}g"/>{% assign foundImage=1 %}{% endif %}{% endif %}{% endfor %}{% endif %}<meta property="og:description" content="{{page.content|strip_html|truncate:50}}"/>
